@model List<Product>
@{
    ViewData["Title"] = "Favorilerim";
}

<section class="container my-5 ms-5">
    <div class="text-center">
        <h1 class="display-4"><i class="bi bi-star-fill" style="color: gold;"></i> Favorilerim
        </h1>
    </div>
    <div class="row">
        <div class="col-md-11">
            <div class="table-responsive">
                @if (Model.Any())
                {
                    <table class="table  table-hover">
                        <tr>
                            <th></th>
                            <th>Ürün</th>
                            <th>Fiyat</th>
                            <th></th>
                        </tr>
                        <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="Img/Products/@item.Image" height="150"></img></td>
                                <td>
                                    <a class="nav-link text-dark" href="/Products/Details/@item.Id">
                                        @item.Name
                                    </a>
                                </td>
                                <td>@item.Price.ToString("c")</td>
                                <td>
                                    <form asp-action="Remove" asp-controller="Favorites" method="post">
                                        <input type="hidden" name="ProductId" value="@item.Id">
                                        <button class="btn btn-sm btn-danger" type="submit"
                                                style="background: red; width: 40px; border: none; padding: 0px;">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }


                        </tbody>

                    </table>
                }
                else
                {
                    <div class="container-fluid ">
                        <div class="alert alert-warning text-center ms-5">
                        
                            <h3>Favorilerinizde Ürün Bulunmamaktadır.</h3>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>