@using Microsoft.VisualBasic
@model IEnumerable<Category>
@{
    foreach (var anaKategori in Model.Where(c =>c.IsActive && c.IsTopMenu && c.ParentId == 0))
    {
        <div class="dropdown mt-3">
            <button class="dropdown-toggle nav-link text-dark" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              @anaKategori.Name
            </button>
            <ul class="dropdown-menu">
                @foreach (var altKategori in Model.Where(c =>c.IsActive && c.IsTopMenu && c.ParentId == anaKategori.Id))
                {
                    <li><a class="dropdown-item" href="/Categories/Index/@altKategori.Id">@altKategori.Name</a></li>
                }
               
               
            </ul>
        </div>
    }
}